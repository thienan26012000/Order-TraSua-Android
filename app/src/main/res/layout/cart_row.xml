        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_photo_cart"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/trasua"></ImageView>

            <ImageView
                android:id="@+id/img_remove_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_delete"
                android:layout_below="@+id/img_photo_cart">
            </ImageView>

            <TextView
                android:id="@+id/tv_name_product_cart"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/img_photo_cart"
                android:text="Tra sua 1"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/tv_price_product_cart"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_name_product_cart"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/img_photo_cart"
                android:text="20.000 Ä‘"
                android:layout_marginLeft="5dp"
                android:textColor="@color/red"
                android:textSize="20sp"></TextView>

            <ImageView
                android:id="@+id/img_minus_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_price_product_cart"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/img_photo_cart"
                android:src="@drawable/ic_baseline_remove_24"></ImageView>

            <TextView
                android:id="@+id/tv_count_cart"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_price_product_cart"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/img_minus_cart"
                android:background="@color/white"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="20sp"></TextView>

            <ImageView
                android:id="@+id/img_plus_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_price_product_cart"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv_count_cart"
                android:src="@drawable/ic_baseline_add_24"></ImageView>

        </RelativeLayout>
</androidx.cardview.widget.CardView>















































